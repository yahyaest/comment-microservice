generator client {
 provider      = "prisma-client-py"
 // config_option = "value"
 interface     = "asyncio"
}

datasource db {
 provider = "postgresql"
 url      = env("DATABASE_URL")
}

model Comment {
 id        Int      @id @default(autoincrement())
 createdAt DateTime @default(now())
 updatedAt DateTime @updatedAt
 userEmail String
 userId    Int?
 content   String
 thread    Thread?  @relation(fields: [threadId], references: [id])
 threadId  Int?
 votes     Vote[]
}

model Thread {
 id        Int       @id @default(autoincrement())
 createdAt DateTime  @default(now())
 updatedAt DateTime  @updatedAt
 comments  Comment[]
}

model Vote {
 id        Int      @id @default(autoincrement())
 createdAt DateTime @default(now())
 updatedAt DateTime @updatedAt
 userEmail String
 userId    Int?
 vote_type VoteType
 comment   Comment? @relation(fields: [commentId], references: [id])
 commentId Int?
}

enum VoteType {
 UP
 DOWN
}
